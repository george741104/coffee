<h1 class="well">Places List </h1>
<div class="table-responsive">

      <table class="table table-striped table-hover">
            <% @places.each do |p| %>

            <tr>
                  <td class="text-left">
                        <p><%=p.name %></p>
                        <%if p.is_open == true%>
                        <p ><%="Open" %></p>
                        <%else%>
                        <p ><%="Close"%></p>
                        <%end%>
                  </td>
                  <td class="">
                        <%= link_to 'Info', place_path(p), :class => 'btn btn-primary' %>
                        <%= link_to 'Edit', edit_place_path(p), :class => 'btn btn-success' %>
                        <%= link_to 'Delete', place_path(p), :method =>'delete', :class => 'btn btn-danger' %>
                  </td>
            </tr>
            <% end %>
      </table>
</div>
<%= link_to 'New Place', new_place_path, :class => "btn btn-warning" %>
<%= paginate @places %>


